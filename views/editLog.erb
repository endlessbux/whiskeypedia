<h2>Edited by <%= @his[:username] %></h2>
<h4>On <%= @his[:date].strftime(fmt='%F %T') %></h4>
<ul class="no-bullets">
	<li><a href="<%= @his[:previous] %>" class="button button-inline button-primary <%= "disabled-link" if @his[:previous] == nil %>">prev</a></li>
	<li><a href="<%= @his[:next] %>" class="button button-inline button-primary <%= "disabled-link" if @his[:next] == nil %>">next</a></li>
</ul>
<section>
	<%= @his[:diff] %>
</section>
<% if admin? %>
	<ul class="no-bullets">
		<li><a class="button button-warning" href="/restore/<%= @his[:tid] %>">Restore</a></li>
	</ul>
<% end %>
