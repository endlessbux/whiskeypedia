<h2>Edit article</h2>
<form action="/edit" method="post" id="edit">
	<input type="hidden" name="_method" value="put">
	<textarea rows="20" cols="90" name="message"><%= @info %></textarea>
	<input type="submit" value="Update">
</form>

<% if $credentials %>
	<% if $credentials[0] != "" %>
		<% if $credentials[0] == 'Admin' %>
			<a class="button button-primary" href="../reset">Reset</a>
			<a class="button button-warning" href="../makedefault">Make Default</a>
		<% end %>
	<% end %>
<% end %>
